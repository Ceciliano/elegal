<!DOCTYPE html>
<html lang="en" ng-app="app">

  <% include ../partials/head %>

  <body>

  <section id="container" >
      <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
      <!--header start-->
         <% include ../partials/header %>
      <!--header end-->

      <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
      <!--sidebar start-->
         <% include ../partials/sidebar %>
      <!--sidebar end-->
      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <script type="text/ng-template" id="/lista">
          <section id="main-content">
              <section class="wrapper">
              	<h3><i class="fa fa-angle-right"></i> Marcas Cadastradas</h3>
    		  		<div class="row mt">
    			  		<div class="col-lg-12">
                          <div class="content-panel">
                          <h4><i class="fa fa-angle-right"></i> Lista de marcas da loja</h4>
                              <section id="unseen">
                                <table class="table table-bordered table-striped table-condensed">
                                  <thead>
                                  <tr>
                                      <th>Logo</th>
                                      <th>Nome</th>
                                      <th>Descrição</th>
                                      <th>Ativa</th>
                                      <th>Destaque</th>
                                  </tr>
                                  </thead>
                                  <tbody>
                                  <tr ng-repeat="marca in marcas">
                                      <td> {{marca.logo}} </td>
                                      <td> {{marca.nome}} </td>
                                      <td> {{marca.descricao}} </td>
                                      <td> {{marca.ativo}} </td>
                                      <td> {{marca.destaque}} </td>
                                  </tr>
                                  </tbody>
                              </table>
                              <a href="#/novo/57e4119f99a1d94c269a37d5" class="btn btn-default">Novo</a>
                         </section>
                      </div><!-- /content-panel -->
                   </div><!-- /col-lg-4 -->
    		  	</div><!-- /row -->
    		</section><!--/wrapper -->
          </section><!-- /MAIN CONTENT -->
    </script>

    <script type="text/ng-template" id="/formulario">

        <section id="main-content">
            <section class="wrapper">
              <h3><i class="fa fa-angle-right"></i> Marcas Cadastradas</h3>
                  <div class="row mt">
                		<div class="col-lg-12">
                        <div class="form-panel">
                        	<h4 class="mb"><i class="fa fa-angle-right"></i> Marca {{marca.nome}} </h4>
                            <form class="form-horizontal style-form" method="post" enctype="multipart/form-data" ng-submit="submeter()">
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Ativa?</label>
                                    <div class="col-sm-2">
                                        <select class="form-control" ng-model="marca.ativo" ng-options="opcao.value as opcao.label for opcao in opcoes">
                                            <option value="">Selecione...</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Destaque?</label>
                                    <div class="col-sm-2">
                                        <select class="form-control" ng-model="marca.destaque" ng-options="opcao.value as opcao.label for opcao in opcoes">
                                            <option value="">Selecione...</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Nome</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="marca.nome">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Descrição</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control" ng-model="marca.descricao">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 col-sm-2 control-label">Logo</label>
                                    <div class="col-sm-4">
                                        <input type="file" class="form-control" ng-model="marca.logo">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-default">Salvar</button>
                            </form>
                        </div>
                		</div><!-- col-lg-12-->
                	</div><!-- /row -->
          </section><!--/wrapper -->
        </section><!-- /MAIN CONTENT -->
  </script>
    <ng-view></ng-view>
      <!--main content end-->
      <!--footer start-->
         <% include ../partials/footer %>
      <!--footer end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="../assets/js/jquery.js"></script>
    <script src="../assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="../assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="../assets/js/jquery.scrollTo.min.js"></script>
    <script src="../assets/js/jquery.nicescroll.js" type="text/javascript"></script>


    <!--common script for all pages-->
    <script src="../assets/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="/angular/marca.js"></script>
  </body>
</html>
